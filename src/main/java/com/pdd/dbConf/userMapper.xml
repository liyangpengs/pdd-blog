<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pdd.dao.userDao">
	<!-- 登录 -->
	<select id="login" resultType="com.pdd.bean.User">
		select sid,sname,semail,snickname,sphone,isadmin,regisdate,userHead from user where sname=#{sname} and spwd=#{pwd}
	</select>
	<!-- 注册 -->
	<insert id="regis" parameterType="com.pdd.bean.User" useGeneratedKeys="true" keyColumn="sid" keyProperty="sid">
		insert into user(sname,spwd,semail,snickname,sphone,isadmin,registerIp,regisdate)values(#{sname},#{pwd},#{semail},#{snickName},#{sphone},#{isadmin},#{registerIp},#{regisdate})
	</insert>
</mapper>
